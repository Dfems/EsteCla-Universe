{
  "firestore": {
    "rules": "firebase/rules/firestore.rules",
    "indexes": "firebase/indexes/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/rules/storage.rules"
  },
  "functions": [
    {
      "source": "firebase/functions"
    }
  ],
  "hosting": [
    {
      "target": "estecla",
      "public": "apps/estecla-universe/dist",
      "ignore": ["**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
        },
        { "source": "index.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
      ]
    },
    {
      "target": "glufri-travelers",
      "public": "apps/glufri-travelers/dist",
      "ignore": ["**/.*", "**/node_modules/**"],
      "rewrites": [{ "source": "**", "destination": "/index.html" }],
      "headers": [
        {
          "source": "**/*.@(js|css)",
          "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
        },
        { "source": "index.html", "headers": [{ "key": "Cache-Control", "value": "no-cache" }] }
      ]
    }
  ]
}
