{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@estecla-ui/*": ["packages/ui/src/*"],
      "@estecla-hooks/*": ["packages/hooks/src/*"],
      "@estecla-types/*": ["packages/types/src/*"],
      "@estecla-utils/*": ["packages/utils/src/*"],
      "@estecla-theme/*": ["packages/theme/src/*"],
      "@estecla-pwa/*": ["packages/pwa/src/*"]
    }
  }
}
