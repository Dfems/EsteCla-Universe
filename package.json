{
  "name": "estecla-universe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:all",
    "lint": "npm run lint:all",
    "format": "npm run format:all",
  "check": "npm run format; npm run lint; npm run type-check; npm run build",
    "preview": "vite preview",
    "prepare": "husky install",
    "deploy": "npm run build && firebase deploy",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "server-test": "npm run build && serve -s dist",
    "unused deps": "depcheck --ignore-path .gitignore",
    "type-check": "npm run type-check:all",
    "dev:estecla": "npm run dev -w apps/estecla-universe",
    "dev:glufri": "npm run dev -w apps/glufri-travelers",
    "build:all": "lerna run build --stream",
    "lint:all": "lerna run lint --stream || echo 'some packages may not define lint'",
    "type-check:all": "lerna run type-check --stream || echo 'some packages may not define type-check'",
    "format:all": "lerna run format --stream || echo 'some packages may not define format'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.7",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@types/firebase": "^2.4.32",
    "@types/react-router-dom": "^5.3.3",
    "firebase": "^11.6.0",
    "framer-motion": "^12.6.3",
    "gh": "^2.8.9",
    "react": "^19.0.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.4.1",
    "react-slick": "^0.30.3",
    "react-window": "^1.8.11",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-slick": "^0.23.13",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.5",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  }
}
