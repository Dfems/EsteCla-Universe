{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@routes": ["./src/routes/index.tsx"],
      "@routes/*": ["./src/routes/*"],
      "@context/*": ["./src/context/*"],
      "@features/*": ["./src/features/*"],
      "@services/*": ["./src/lib/*"],
      "@theme": ["./src/styles/theme.ts"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src"]
}
